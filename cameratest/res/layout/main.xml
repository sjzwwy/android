<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/fl_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:id="@+id/parent_preview" android:orientation="horizontal">
        </LinearLayout>
        <View android:layout_width="180dp" android:layout_height="180dp"
              android:id="@+id/scan_view"
               android:layout_gravity="center" android:background="@drawable/shape_bg"/>
        <ImageButton android:layout_width="40dp" android:layout_height="40dp"
                android:id="@+id/btn_capture" android:layout_gravity="right|center_vertical"/>
    </FrameLayout>
</RelativeLayout>

